<%= simple_form_for @responsible, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :role %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                responsibles_path, :class => 'btn btn-inverse' %>
  </div>
<% end %>
