<div class="container-fluid">
	<%- model_class = Responsible -%>
	
	<div class="hero-unit">
		<h1><%=t '.title', :default => model_class.model_name.human %></h1>
		
		<dl class="dl-horizontal">
		  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
		  <dd><%= @responsible.name %></dd>
		  <dt><strong><%= model_class.human_attribute_name(:role) %>:</strong></dt>
		  <dd><%= @responsible.role %></dd>
		</dl>
	</div>
	
	<div class="form-actions">
	  <%= link_to t('.back', :default => t("helpers.links.back")),
				  responsibles_path, :class => 'btn btn-inverse'  %>
	  <%= link_to t('.edit', :default => t("helpers.links.edit")),
				  edit_responsible_path(@responsible), :class => 'btn btn-inverse' %>
	  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
				  responsible_path(@responsible),
				  :method => 'delete',
				  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
				  :class => 'btn btn-danger' %>
	</div>
</div>