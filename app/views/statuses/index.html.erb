<div class="container-fluid">
	<%- model_class = Status -%>
	<div class="page-header">
		<legend style="padding: 1%2%1%2%">
			<%=t '.title', :default => model_class.model_name.human.pluralize %>
		</legend>
	</div>
	<table class="table table-striped">
	  <thead>
		<tr>
		  <th><%= model_class.human_attribute_name(:id) %></th>
		  <th><%= model_class.human_attribute_name(:title) %></th>
		  <th><%= model_class.human_attribute_name(:created_at) %></th>
		  <th><%=t '.actions', :default => t("helpers.actions") %></th>
		</tr>
	  </thead>
	  <tbody>
		<% @statuses.each do |status| %>
		  <tr>
			<td><%= status.id %></td>
			<td><%= status.title %></td>
			<td><%=l status.created_at %></td>
			<td>
			  <%= link_to t('.show', :default => t("helpers.links.show")),
						  status_path(status), :class => 'btn btn-inverse btn-mini' %>
			  <%= link_to t('.edit', :default => t("helpers.links.edit")),
						  edit_status_path(status), :class => 'btn btn-inverse btn-mini' %>
			  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
						  status_path(status),
						  :method => :delete,
						  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
						  :class => 'btn btn-mini btn-danger' %>
			</td>
		  </tr>
		<% end %>
	  </tbody>
	</table>

	<%= link_to t('.new', :default => t("helpers.links.new")),
				new_status_path,
				:class => 'btn btn-primary' %>
	<%= link_to 'Delete All', statuses_destroy_all_path,
						  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
						  :class => 'btn btn-danger' %>
</div>