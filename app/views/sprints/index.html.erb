<%- model_class = Sprint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:date_begin) %></th>
      <th><%= model_class.human_attribute_name(:date_final) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sprints.each do |sprint| %>
      <tr>
        <td><%= sprint.id %></td>
        <td><%= sprint.date_begin %></td>
        <td><%= sprint.date_final %></td>
        <td><%= sprint.name %></td>
        <td><%=l sprint.created_at %></td>
        <td>
		  <%= link_to t('.show', :default => t("helpers.links.show")),
                      sprint_path(sprint), :class => 'btn btn-inverse btn-mini' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_sprint_path(sprint), :class => 'btn btn-inverse btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sprint_path(sprint),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sprint_path,
            :class => 'btn btn-primary' %>
<%= link_to 'Delete All', sprints_destroy_all_path,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger' %>