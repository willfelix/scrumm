<!DOCTYPE html>
<html>
<head>
  <title>Scrum</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag :highcharts %>
  
  <script type="text/javascript" src="http://blogonthenet.xpg.com.br/ttricks/menuslide.js"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
  
  <%= csrf_meta_tags %>
</head>

<body>
	
<div class="container-narrow">

	<% if user_signed_in? %>
		<div class="navbar navbar-inverse navbar-fixed-top">
			  <div class="navbar-inner">
				<div class="container-fluid">
					<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					  
					<%= link_to 'Scrumm', root_path, :class => "brand" %>
					  
					<div class="nav-collapse collapse">
						<p class="navbar-text pull-right" >
							Logged in as <%= link_to current_user.name, :class => "navbar-link" %> ||
							<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
						</p>
						
						<ul class="nav">
							<li id="home"><%= link_to 'Home', root_path %></li>
							<li id="sprints"><%= link_to 'Sprints', sprints_path %></li>
							<li id="projects"><%= link_to 'Projects', projects_path %></li>
							<li id="tasks"><%= link_to 'Tasks', tasks_path %></li>
							<li id="statuses"><%= link_to 'Status', statuses_path %></li>
							<li id="responsibles"><%= link_to 'Responsibles', responsibles_path %></li>
							<li id="points"><%= link_to 'Points', points_path %></li>
						</ul>
					</div>
					
				</div>
			  </div>
		</div>
	
	<br><br><br>
	<% end %>
	
  <%= yield %>

</div>

</body>
</html>
