<div class="container">

	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: "form-signin" }) do |f| %>
		<%= f.error_notification %>
		<h2 class="form-signin-heading">Sign Up</h2> <br>
		
		<%= f.input :name, :required => true, :autofocus => true, :class=>"input-block-level" %>
		<%= f.input :email, :required => true, :class=>"input-block-level" %>
		<%= f.input :password, :required => true, :class=>"input-block-level" %>
		<%= f.input :password_confirmation, :required => true, :class=>"input-block-level" %>
		
		<%= f.button :submit, "Sign up", :class=>"btn btn-success" %>
		<%= render "devise/shared/links" %>
	<% end %>
	
</div>